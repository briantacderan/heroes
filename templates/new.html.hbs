<html>

<head>
    <title>
        Herodex!
    </title>
    
    <link rel="stylesheet" href="https://meyerweb.com/eric/tools/css/reset/reset200802.css" />
    <link rel="stylesheet" 
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
          crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Slackey&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/x-icon" href="../imgs/herodex-logo.svg" />

    <style>
        a { color: black; }
        a:hover { text-decoration: none; }
        h1, h2, h3, a, button { font-family: "Slackey", sans-serif; }
    </style>
</head>

<body>
    <div class="container my-5">
        <h3>
            <img src="../imgs/herodex-logo.svg" style="width: 10vw;" /> Inserting a new Hero! 
                <a class="btn btn-primary float-right" href="/">Go back!</a>
        </h3>
        <hr>

        <form class="form-control" enctype="multipart/form-data" method="POST" action="/insert">
            <div class="col"
                 style="display: flex; flex-direction: column; justify-content: center; align-items: space-around; margin: 1.5rem auto;">

                <div class="form-group" style="margin-top: 5rem;">
                    <div class="row">
                        <div class="col">
                            <label for="fantasyName">Hero's name:<span style="color: red">*</span></label>
                            <input required
                                   type="text"
                                   placeholder="E.g: John Mad dog" name="fantasy_name"
                                   id="fantasyName"
                                   class="form-control" />
                        </div>
                        <div class="col">
                            <label for="realName">Hero's <strong>Real</strong> name:</label>
                            <input required
                                   type="text"
                                   placeholder="e.g: John Not that Mad" name="real_name"
                                   id="realName"
                                   class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="fantasyName">Hero's spotted picture:<span style="color: red">*</span></label>
                            <div class="custom-file">
                                <label for="spottedPhoto"
                                       id="spotted-photo" 
                                       type="text"
                                       class="custom-file-label"><i>Upload the leaked photo</i></label>
                                <input type="file"
                                       id="spottedPhoto"
                                       name="spotted_photo"
                                       class="custom-file-input" 
                                       accept="image/png, image/jpeg" />
                            </div>
                        </div>
                        <div class="col">
                            <label for="strengthLevel">Hero's <strong>STRENGTH</strong> level:</label>
                            <input type="range"
                                   name="strength_level"
                                   class="custom-range"
                                   min="0" max="10"
                                   id="strengthLevel" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="fantasyName">Upload password:<span style="color: red">*</span></label>
                            <input type="text"
                                   placeholder="HINT: look at my portfolio"
                                   id="txt"
                                   name="pass_name"
                                   id="passName"
                                   class="form-control"
                                   onkeyup="manage(this)" />
                        </div>
                        <div class="col">
                            <button disabled
                                    id="btSubmit"
                                    class="btn btn-primary btn-block btn-large"
                                    style="margin-left: 30%; width: 70%;">üóûÔ∏è Insert new hero into the database
                            </button>
                        </div>
                    </div>
                </div>
                {{#if flash}}
                    <div class="alert alert-danger">
                        {{flash}}
                    </div>
                {{/if}}
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script>
        function manage(txt) {
            var bt = document.getElementById('btSubmit');
            if (txt.value != 'the-tacderan-code') {
                bt.disabled = true;
            } else {
                bt.disabled = false;
            }
        }

        $("#spottedPhoto").change(function () {
            $("#spotted-photo").text(this.files[0].name);
        });

